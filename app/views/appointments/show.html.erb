<%- model_class = Appointment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">

  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @appointment.customer_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:package_id) %>:</strong></dt>
  <dd><%= @appointment.package_id %></dd>

  <dt><strong><%= model_class.human_attribute_name(:appointment_date) %>:</strong></dt>
  <dd><%= @appointment.appointment_date %></dd>

  <dt><strong><%= model_class.human_attribute_name(:appointment_time) %>:</strong></dt>
  <dd><%= @appointment.appointment_time %></dd>

  <dt><strong><%= model_class.human_attribute_name(:number_of_cars) %>:</strong></dt>
  <dd><%= @appointment.number_of_cars %></dd>

  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @appointment.location %></dd>

  <dt><strong><%= model_class.human_attribute_name(:location_type) %>:</strong></dt>
  <dd><%= @appointment.location_type %></dd>

  <dt><strong><%= model_class.human_attribute_name(:gender_of_customer) %>:</strong></dt>
  <dd><%= @appointment.gender_of_customer %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              appointments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_appointment_path(@appointment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              appointment_path(@appointment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
