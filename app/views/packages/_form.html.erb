<%= simple_form_for @package, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :price %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                packages_path, :class => 'btn' %>
  </div>

<% end %>
