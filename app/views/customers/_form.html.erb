<%= simple_form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :first_name %>

  <%= f.input :last_name %>

  <%= f.input :email %>

  <%= f.input :phone %>

  <%= f.input :address %>

  <%= f.input :car %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn' %>
  </div>

<% end %>
